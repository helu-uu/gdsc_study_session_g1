def word_fequency(text,word):
    words=text.split()
    frquency=words.count(word)return frquency
def main():
    text=input("enter a text")
    search_word=input("enter a word to search in the text:")
    if the search_word in text:
        freq=word_frequency(text,search_word)
        print(f"the word'{search_word}'appear{freq}times in the text.")
        else:
            print(f"the word '{search_word}'is not found in the text.")
#task 2
def word_length(word_list):
    word_len=[]
    for i in range(len(word_list)):
        word_len.append(len(word_list[i]))
        return word_len
def average_word_length(text):
    words=text.split()
    total_length=sum(len(word in words))
    return total_length /len(words)
    text=input("enter text")
    avg_length=average_word_length(text)
    print("average word length:",avg_length)
