def word_frequency(word):
    split_word=word.split()
    word freq={}
    word freq=[]
    for i in split_word:
        wor_freq.append(split_word.count(i))
    for j in range (len(word_freq)):
        word_freq.update({split_word[j]:word_freq[j]})
        return word_freq
def word fequencies(text):
    words=text.split()
    word_freq ={}
    for word in words:
        if word in word_freq:
            word_freq[word]+=1
        else:
                word_freq[word]=1
    sorted_word_freq=sorted(word_freq.items(),key=lambda x:x[1],reverse=true)
    for word ,freq in sorted_word_freq:
        print(f"{word}:{freq}")
